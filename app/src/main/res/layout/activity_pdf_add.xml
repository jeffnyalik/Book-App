<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cccc"
    tools:context=".PdfAddActivity">

    <RelativeLayout
        android:id="@+id/pdf_toolbar"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/shape_toolbar01"/>

    <ImageView
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:background="@drawable/ic_baseline_arrow_back_24"/>

    <ImageView
        android:id="@+id/attBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/ic_baseline_attach_file_24"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/logo_icon"
        android:layout_width="110dp"
        android:layout_height="100dp"
        app:civ_border_color="@color/splash_color"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:padding="20dp">

        <EditText
            android:id="@+id/titleEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:background="@drawable/shape_edittext01"
            android:hint="Category name"
            android:inputType="text"
            android:padding="15dp"
            android:textColor="@color/black"
            android:drawableStart="@drawable/ic_baseline_attach_file_24"
            android:textColorHint="@color/splash_color" />

        <EditText
            android:id="@+id/descEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_edittext01"
            android:hint="Description"
            android:layout_below="@id/titleEt"
            android:inputType="text|textImeMultiLine|textCapSentences"
            android:padding="15dp"
            android:textColor="@color/black"
            android:drawableStart="@drawable/ic_baseline_attach_file_24"
            android:textColorHint="@color/splash_color" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

        <Button
            android:id="@+id/add_cat_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/descEt"
            android:layout_alignParentRight="true"
            android:layout_marginTop="12dp"
            android:background="@drawable/shape_button"
            android:fontFamily="sans-serif-condensed"
            android:padding="3dp"
            android:text="Add categeory"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20sp" />
        />

    </RelativeLayout>

</RelativeLayout>